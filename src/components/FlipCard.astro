---
import userLogo from '../assets/images/perro programador.webp'
import GitHubIcon from '../assets/icons/github.svg'
import WebIcon from '../assets/icons/web.svg'
import LinkedInIcon from '../assets/icons/linkedin.svg'
---
<section class="container">
  <section id="flip-card">
    <article class="front">
      <div class="image">
        <img src={userLogo.src} alt="Foto de perfil de usuario" fetchpriority="high">
      </div>
      <div class="info">
        <h1>Outzider Dev</h1>
        <p>Desarrollador de software apasionado por las paginas webs</p>
      </div>
    </article>

    <article class="back">
      <a href="#" target="_blank" rel="noopener noreferrer">
        <GitHubIcon />
        <p>GitHub</p>
      </a>
      <a href="#" target="_blank" rel="noopener noreferrer">
        <WebIcon stroke={"white"}/>
        <p>Portafolio</p>
      </a>
      <a href="#" target="_blank" rel="noopener noreferrer">
        <LinkedInIcon />
        <p>LinkedIn</p>
      </a>
    </article>
  </section>  
</section>


<style>
  .container {
    width: 100%;
    height: 100%;
    position: relative;
    perspective: 2000px;
    

    & > section {
      width: 600px;
      height: 350px;
      margin: 3rem auto;
      position: relative;
      transform-style: preserve-3d;
      animation: flip 10s infinite linear; 
      perspective-origin: 50% 50%;
      /* border: 1px solid #fff5; */

      & > .front, .back {
        background-color: var(--color-azul);
        /* border: 1px solid #fff5; */
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: row;
        gap: 1rem;
        position: absolute;     
      }

      & > .front {
        color: var(--color-azul-claro);
        
        padding: 10px;
        overflow: hidden;

        & > .image {
          width: 40%;

          & > img {
          width: 100%;
          height: 100%;
          border-radius: 20px;
          object-fit: cover;
          box-shadow: 1px 1px 10px rgba(255, 255, 255, 0.5);
        }
        }


        & > .info {
          width: 50%;
          display: flex;
          flex-direction: column;
          text-align: center;
          
          & > h1 {
            font-weight: bold;
            font-size: 2rem;
          }

          & > p {
            font-size: 1.2rem;
            margin-top: 0.5rem;
            text-wrap: balance;
          }
        }
      }
      
      & > .back {
        backface-visibility: hidden;
        transform: rotateY(180deg);

        & > a {
          display: flex;
          flex-direction: column;
          align-items: center;
          gap: 1rem;
          text-decoration: none;
          color: var(--color-blanco);
          font-weight: bold;
          font-size: 1.3rem;

          & > svg {
            width: 150px;
            height: 150px;
          }
        }
      }
      
    }
  }

  .paused {
    animation-play-state: paused !important;
  }

  @keyframes flip {
    0% { transform: rotateY(0deg);}
    100% { transform: rotateY(360deg)}
  }
</style>

<script>
  const card  = document.querySelector('#flip-card') as HTMLElement
  card.addEventListener('mouseenter', () => card.classList.add('paused'));
  card.addEventListener('mouseleave', () => card.classList.remove('paused'));
</script>