---
import userLogo from '../assets/images/perro programador.webp'
import GitHubIcon from '../assets/icons/github.svg'
import WebIcon from '../assets/icons/web.svg'
import LinkedInIcon from '../assets/icons/linkedin.svg'
---
<section class="container">
  <div id="flip-card" class="flip-card">
    <article class="front">
      <div class="image">
        <img src={userLogo.src}  alt="Foto de perfil de usuario" fetchpriority="high">
      </div>
      <div class="info">
        <h1>Outzider Dev</h1>
        <p>Desarrollador de software apasionado por las tecnolog√¨as webs</p>
      </div>
    </article>

    <article class="back">
      <a href="https://github.com/OutziderDev/" target="_blank" rel="noopener noreferrer">
        <GitHubIcon />
        <p>GitHub</p>
      </a>
      <a href="https://portafolio-dev-bay.vercel.app/" target="_blank" rel="noopener noreferrer">
        <WebIcon stroke={"white"}/>
        <p>Portafolio</p>
      </a>
      <a href="www.linkedin.com/in/luisbarriosdeleon" target="_blank" rel="noopener noreferrer">
        <LinkedInIcon />
        <p>LinkedIn</p>
      </a>
    </article>
  </div>  
</section>


<style >
  .container {
    width: 100%;
    height: 100%;
    position: relative;
    perspective: 2000px;

    & > .flip-card {
      width: 600px;
      height: 350px;
      margin: 3rem auto;
      position: relative;
      transform-style: preserve-3d;
      animation: flip 15s infinite linear; 

      & > .front, .back {
        background-color: var(--color-azul);
        /* border: 2px solid #fff5; */
        border-radius: 1rem;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: row;
        gap: 1rem;
        position: absolute;  
      }

      & > .front {
        box-sizing: border-box;
        color: var(--color-azul-claro);
        padding: 10px;
        overflow: hidden;

        & > .image {
          width: 40%;

          & > img {
          width: 100%;
          height: 100%;
          border-radius: 20px;
          object-fit: cover;
          box-shadow: 1px 1px 10px rgba(255, 255, 255, 0.5);
        }
        }

        & > .info {
          width: 50%;
          display: flex;
          flex-direction: column;
          text-align: center;
          
          & > h1 {
            font-weight: bold;
            font-size: 2rem;
          }

          & > p {
            color: #fff;
            font-size: 1.2rem;
            margin-top: 0.5rem;
            text-wrap: balance;
          }
        }
      }
      
      & > .back {
        backface-visibility: hidden;
        transform: rotateY(180deg);
        margin-top: 10px;

        & > a {
          display: flex;
          flex-direction: column;         
          align-items: center;
          gap: 1rem;
          text-decoration: none;
          color: white;
          font-weight: bold;
          font-size: 1.3rem;
          padding: 0.5rem;
          border-radius: 0.5rem;
          transition: background-color 0.3s ease ;

          & > svg {
            width: 150px;
            height: 150px;
          }

          &:hover {
            background-color: #fff2;
          }
        }
      }
      
    }
  }

  .paused {
    animation-play-state: paused !important;
  }

  @keyframes flip {
    0% { transform: rotateY(0deg);}
    50% { transform: rotateY(360deg)}
    100% { transform: rotateY(0deg);}
  }
</style>

<script>
  const card  = document.querySelector('#flip-card') as HTMLElement
  card.addEventListener('mouseenter', () => card.classList.add('paused'));
  card.addEventListener('mouseleave', () => card.classList.remove('paused'));
</script>