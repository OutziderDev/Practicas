---
import userLogo from '@/assets/images/perro.webp'
import GitHubIcon from '@/assets/icons/github.svg'
import PawIcon from '@/assets/icons/paw.svg'
/* import Image from 'astro/components/Image.astro' */
---
<section>
  <div class="cube-container">
    <div class="cara frente">
      <img src={userLogo.src} alt="Foto de perfil de usuario" fetchpriority={"high"}/>
    </div>
    <div class="cara derecha"></div>
    <div class="cara izquierda"></div>
    <div class="cara atras">
      <GitHubIcon />
    </div>
    <div class="cara inferior">
      <PawIcon/>
    </div>
  </div>
</section>

<style >
  section {
    width: 100%;
    height: 100%;
    margin: auto;
    perspective: 5000px;
    position:relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .cube-container {
    position: relative;
    width: 250px;
    height: 250px;
    transform-style: preserve-3d;
    animation: rotate 10s infinite ; 

    & > .cara {
      position: absolute;
      width:100%;
      height:100%;
      
      & svg {
        width: 100%;
        height: 100%;
      }
    }

    .frente {
      background-color: burlywood;
      transform: rotateY(  0deg) translateZ(125px); 

      & > img {
        width: 100%;
        height: 100%;
      }
    }
    .atras {
      background-color: brown; 
      transform: rotateY(180deg) translateZ(125px); 
      padding: 1.5rem;
      box-sizing:border-box;
    }
    .derecha {
      background-color: cadetblue; 
      transform: rotateY( 90deg) translateZ(125px); 
    }
    .izquierda {
      background-color: blue; 
      transform: rotateY(-90deg) translateZ(125px); 
    }
    .inferior {
      background-color:goldenrod;
      transform: rotateX(90deg) translateZ(-125px);
    } 
  }
  
  @keyframes rotate {
    from { transform: rotateZ(0deg) rotateX(0deg); }
    to { transform: rotateZ(360deg) rotateX(360deg); }
  }
</style>