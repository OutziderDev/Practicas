---
import brand from "@/assets/images/perro.webp"
import GitIcon from "@/assets/icons//github.svg"
---
<aside>
  <header>
    <h1 class="sr-only">El taller by Outzider</h1>
    <a class="layoutBranding" href="http://github.com/tailwindlabs" target="_blank" rel="noopener noreferrer">
      <div class="layoutFrontal">
        <img src={brand.src} alt="" aria-label="imagen de branding">
      </div>
      <div class="layoutTrasero"> 
        <GitIcon />
      </div>
    </a>
  </header>

  <nav>
    <a href="">Perspectiva </a>
    <a href="">Grandientes </a>
    <a href="">Degradados</a>
    <a href="">Bordes</a>
    <a href="">MÃ¡scara</a>
    <a href="">Filtros</a>
  </nav>
  
</aside>

<style>
  aside {
    width: 20%;
    background-color: var(--color-azul-oscuro);
    min-height: 100dvh;
    position: relative;
  }

  header {
    width: 100%;
    height: 25%;
    background-color: rebeccapurple;
    perspective: 1000px;

    & > .layoutBranding {
      width: 85%;
      margin: auto;
      display: block;
      position: relative;
      transform-style: preserve-3d;
      /* animation: rotate 5s infinite; */

      & > .layoutFrontal , & > .layoutTrasero {
        position: absolute;
        display: flex;
        backface-visibility: hidden;

        & > img, & > svg {
          width: 100%;
          position: relative;
          border-radius: 100%;
        }
      }

      & > .layoutTrasero {
        transform: rotateY(180deg);
      }

      & > button {
        background-color: red;
      }
      
    }
  }

  nav {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap:0.3rem;
    padding: 0.3rem;

    & > a {
      width: 100%;
      text-decoration: none;
      background-color: var(--color-azul-oscuro);
      color: var(--color-texto);
      padding: 0.5rem 1rem;
      font-size: 1.3rem;
      display: flex;
    }
  }

  @keyframes rotate {
    0% {
      transform: rotateY(0deg);
    }
    100% {
      transform: rotateY(180deg);
    }
  }
</style>