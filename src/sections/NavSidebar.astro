---
import brand from "@/assets/images/perro.webp"
import GitIcon from "@/assets/icons/github.svg"
import FileIcon from "@/assets/icons/file.svg"
---
<aside>
  <header>
    <h1 class="sr-only">El taller by Outzider</h1>
    <a class="layoutBranding" href="http://github.com/tailwindlabs" target="_blank" rel="noopener noreferrer">
      <div class="layoutFrontal">
        <img src={brand.src} alt="" aria-label="imagen de branding">
      </div>
      <div class="layoutTrasero"> 
        <GitIcon />
      </div>
    </a>
  </header>

  <nav>
    <a href=""> <FileIcon /> Perspectiva </a>
    <a href="" class="active"> <FileIcon /> Grandientes </a>
    <a href=""> <FileIcon /> Degradados</a>
    <a href=""> <FileIcon /> Bordes</a>
    <a href="" class="active"> <FileIcon /> MÃ¡scara</a>
    <a href="" class="active"> <FileIcon /> Filtros</a>
  </nav>
  
</aside>

<style>
  aside {
    width: 20%;
    background-color: var(--color-azul-oscuro);
    min-height: 100dvh;
    position: relative;
  }

  header {
    width: 100%;
    height: 25%;
    background-color: rebeccapurple;
    perspective: 1000px;

    & > .layoutBranding {
      width: 85%;
      margin: auto;
      display: block;
      position: relative;
      transform-style: preserve-3d;
      /* animation: rotate 5s infinite; */

      & > .layoutFrontal , & > .layoutTrasero {
        position: absolute;
        display: flex;
        backface-visibility: hidden;

        & > img, & > svg {
          width: 100%;
          position: relative;
          border-radius: 100%;
        }
      }

      & > .layoutTrasero {
        transform: rotateY(180deg);
      }

      & > button {
        background-color: red;
      }
      
    }
  }

  nav {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap:0.3rem;
    padding: 0.3rem;

    & > a {
      width: 100%;
      text-decoration: none;
      background-color: var(--color-azul-oscuro);
      color: var(--color-texto-sombra);
      padding: 0.5rem 1rem;
      font-size: 1.3rem;
      display: flex;
      align-items: center;
      gap: 1.3rem;
      border-left: 0.5rem solid var(--color-azul-oscuro);
      transition: all 0.3s ease;

      &:hover {
        border-left: 0.5rem solid var(--color-azul-fondo);
        background-color: var(--color-azul-fondo);
        color: var(--color-texto);
      }
    }

    & > .active {
      color: var(--color-texto);
      background-color: var(--color-azul);
      border-left: 0.5rem solid var(--color-celeste);
    }
  }

  @keyframes rotate {
    0% {
      transform: rotateY(0deg);
    }
    100% {
      transform: rotateY(180deg);
    }
  }
</style>