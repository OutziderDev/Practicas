---
import FlipBox from '@/components/FlipBox.astro'
import FlipCard from '@/components/FlipCard.astro'
---
<section>
  <FlipCard />
  <FlipBox />
</section>

<style>
  section {
    width: 100%;
    height: 100%;
    padding: 0.5rem;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    gap: 0.5rem;

    @media ( width < 1024px){
      flex-direction: column;
    }
  }
</style>