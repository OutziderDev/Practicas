---
import FlipBox from '@/components/FlipBox.astro'
import FlipCard from '@/components/FlipCard.astro'
import Titulo from '@/components/Titulo.astro'
---
<section>
  <Titulo titulo="Perspectivas en CSS" align="center" />
  <div class="container">
    <FlipCard />
    <FlipBox />
  </div>
</section>

<style>
  .container {
    width: 100%;
    height: 100%;
    padding: 0.5rem;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    gap: 0.5rem;

    @media ( width < 1024px){
      flex-direction: column;
      gap: 5rem;
    }
  }
</style>