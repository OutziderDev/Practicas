---
import FlipBox from '@/components/perspectivas/FlipBox.astro'
import FlipCard from '@/components/perspectivas/FlipCard.astro'
import Titulo from '@/components/Titulo.astro'
import TiltCard from '@/components/perspectivas/TiltCard.astro'
---
<section>
  <Titulo titulo="Perspectivas en CSS" align="center" />
  <div class="container">
    <TiltCard />
    <FlipBox />
    <FlipCard />
  </div>
</section>

<style>
  .container {
    width: 100%;
    height: 100%;
    padding: 0.5rem;
    box-sizing: border-box;
    display: grid;
    grid-template-columns: repeat(2, 1fr); 
    gap: 0.5rem;

    @media ( width < 1024px){
      grid-template-columns: 1fr;
      gap: 5rem;
    }
  }
</style>