<style>
  header {
    max-width: 70dvw;
    font-size: 1.2rem;
    color: var(--color-verdoso-mod);
    width: 100dvw;
    height: 2rem;
    display: flex;
    align-items: center;
     
    justify-content: space-between;
    margin: auto auto;
    
    & .brand {
      display: flex;
      justify-content: center;
      align-items: center;
      gap:0.5rem;
  
      & svg {
        width: 1.5rem;
        height: 1.5rem;
      }
    }

    & nav {
      display: flex;
      gap: 1rem;

      & a {
        text-decoration: none;
        color: var(--color-verdoso-mod);
        font-weight: 600;
      }
    }
  }

</style>