<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root{
    /* Colores */
    --color-fondo: rgb(19, 19, 23);
    --color-fondo-muted: rgb(26, 27, 37); 
    --color-fondo-secundario: #1d5a5d;
    --color-feo: #1bc;
    --color-fe:  #1ab8c1; 
    --main: rgb(60, 236, 214);
    --color-texto-prime: #ecae63;
    /* ---- */
    --color-azul-oscuro: #000f3f;
    --color-azul-fondo: #02134d;
    --color-azul: #014494;
    --color-azul-claro: #61eaff;
    --color-celeste: #01a8e2;
    --color-verde-azulado: #03787f;
    --color-texto: #ffe9e0;
    --color-texto-sombra: #ab9e99;
    /* Fuentes */
    --texto-titulo-general: 'Overlock', italic;
    --texto-titulo-emergente: 'Mada Variable', sans-serif;
    --texto-basico: 'Maitree', serif;
  }

  @font-face {
    font-family: 'Maitree';
    font-style: normal;
    font-display: swap;
    font-weight: 400;
    src: url(https://cdn.jsdelivr.net/fontsource/fonts/maitree@latest/latin-400-normal.woff2) format('woff2');
    unicode-range: U+0000-00FF,U+0131,U+0152-0153,U+02BB-02BC,U+02C6,U+02DA,U+02DC,U+0304,U+0308,U+0329,U+2000-206F,U+20AC,U+2122,U+2191,U+2193,U+2212,U+2215,U+FEFF,U+FFFD;
  }

  /* overlock-latin-400-italic */
  @font-face {
    font-family: 'Overlock';
    font-style: italic;
    font-display: swap;
    font-weight: 400;
    src: url(https://cdn.jsdelivr.net/fontsource/fonts/overlock@latest/latin-400-italic.woff2) format('woff2');
    unicode-range: U+0000-00FF,U+0131,U+0152-0153,U+02BB-02BC,U+02C6,U+02DA,U+02DC,U+0304,U+0308,U+0329,U+2000-206F,U+20AC,U+2122,U+2191,U+2193,U+2212,U+2215,U+FEFF,U+FFFD;
  }

  /* mada-latin-wght-normal */
  @font-face {
    font-family: 'Mada Variable';
    font-style: normal;
    font-display: swap;
    font-weight: 200 900;
    src: url(https://cdn.jsdelivr.net/fontsource/fonts/mada:vf@latest/latin-wght-normal.woff2) format('woff2-variations');
    unicode-range: U+0000-00FF,U+0131,U+0152-0153,U+02BB-02BC,U+02C6,U+02DA,U+02DC,U+0304,U+0308,U+0329,U+2000-206F,U+20AC,U+2122,U+2191,U+2193,U+2212,U+2215,U+FEFF,U+FFFD;
  }

  html {
    scroll-behavior: smooth;
    scrollbar-color: var(--color-celeste) var(--color-azul-oscuro);
  }

	body {
		width: 100%;
    background: var(--color-fondo-muted);
    color: var(--texto);
    display: flex;
	}

  main {
    flex: 1;
  }

  /* Clases de Utilidades */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    margin: -1px;
    padding: 0;
    border: 0;
    clip: rect(0 0 0 0);
    overflow: hidden;
    white-space: nowrap;
  }
</style>
