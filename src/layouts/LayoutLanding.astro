---
const title = Astro.props.title || "El taller de OutziderDev";
import Navbar from '@/sections/Navbar.astro'
import Footer from '@/sections/Footer.astro'
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>El Taller de OutziderDev</title>
	</head>
	<body>
    <Navbar />
    <main>
      <slot />
    </main>
    <Footer />
	</body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root{
    /* Colores */
    --color-fondo: #131317;
    --color-fondo-claro: #212433;
    --color-fondo-muted: #1a1b25; 
    --color-principal: #3cecd6;
    --texto-muted: #a7acd1;
    --color-naranja: #fb8f51;
    
    /* Fuentes */
    --texto-prueba: 'Sintony', system-ui, sans-serif;

    /* colores para opciones */
    /*--color-verdoso-mod: #5adad1;
    --color-darkblue: #0a0f1e;
    --color-light-darkblue: #101828;
    --color-decorador: #192238; */
  }

  @font-face {
    font-family: "Sintony", system-ui, sans-serif;
    font-weight: 400 700;
    font-style: normal;
    font-display: swap;
    src: url('https://fonts.googleapis.com/css2?family=Assistant:wght@200..800&family=Sintony:wght@400;700&display=swap');
  }

  html {
    scroll-behavior: smooth;
    scrollbar-color: rgb(8, 163, 163) var(--color-fondo-claro);
  }

	body {
		width: 100%;
    height: 100%;
    background-color: var(--color-fondo-muted);
	}


  /* Clases de Utilidades */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    margin: -1px;
    padding: 0;
    border: 0;
    clip: rect(0 0 0 0);
    overflow: hidden;
    white-space: nowrap;
  }
</style>
